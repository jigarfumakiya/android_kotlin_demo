<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Android_test" parent="Theme.Material3.Light.NoActionBar" />

    <!--   Splash screen theme  -->
    <style name="Theme.Bits.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenBackground">@color/teal_700</item>
        <item name="postSplashScreenTheme">@style/Theme.Android_test</item>
    </style>

    <style name="BottomNavigationTheme" parent="ThemeOverlay.Material3.NavigationView">
        <item name="colorSurface">@color/purple_700</item>
        <item name="colorOnSurfaceVariant">@color/teal_700</item>
    </style>

    <style name="RoundedCornersDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Rounded dialog shape  -->
    <style name="MaterialDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layout_gravity">center</item>
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>


</resources>